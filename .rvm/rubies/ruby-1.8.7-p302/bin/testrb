#!/usr/bin/env ruby
ENV['GEM_HOME']=ENV['GEM_HOME'] || '/home/kostia/.rvm/gems/ruby-1.8.7-p302'
ENV['GEM_PATH']=ENV['GEM_PATH'] || '/home/kostia/.rvm/gems/ruby-1.8.7-p302:/home/kostia/.rvm/gems/ruby-1.8.7-p302@global'
ENV['PATH']='/home/kostia/.rvm/gems/ruby-1.8.7-p302/bin:/home/kostia/.rvm/gems/ruby-1.8.7-p302@global/bin:/home/kostia/.rvm/rubies/ruby-1.8.7-p302/bin:' + ENV['PATH']

require 'test/unit'
(r = Test::Unit::AutoRunner.new(true)).process_args(ARGV) or
  abort r.options.banner + " tests..."
exit r.run
